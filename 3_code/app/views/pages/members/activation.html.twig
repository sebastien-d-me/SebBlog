{% extends "layouts/container.html.twig" %}

{% set title = "Activation" %}


{% block container_content %}
{% if message is defined %}
    <p class="form__message">{{ message | raw }}</p>
{% endif %}
<form action="#" method="post">
    <div class="form__row">
        <label class="form__label form__label--required" for="activation__mail">Mail</label>
        <input class="input" id="activation__mail" name="activation__mail" placeholder="john.doe@mail.com" required type="email">
    </div>
    <div class="form__row">
        <button class="btn" type="submit">
            Send
            <i class="ri-mail-send-line"></i>
        </button>
    </div>
</form>
{% endblock %}