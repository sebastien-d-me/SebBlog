{% extends "layouts/container.html.twig" %}

{% set title = "Password reset" %}


{% block container_content %}
{% if message is defined %}
    <p class="form__message">{{ message | raw }}</p>
{% endif %}
<form action="#" method="post">
    <div class="form__row">
        <label for="password_reset__password">Password (min 8 characters)</label>
        <input class="input" id="password_reset__password" minlength="8" name="password_reset__password" placeholder="*********" required type="password">
    </div>
    <div class="form__row">
        <button class="btn" type="submit">
            Send
            <i class="ri-mail-send-line"></i>
        </button>
    </div>
</form>
{% endblock %}