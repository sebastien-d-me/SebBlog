<aside class="sidebar__block">
    <section>
        <h2 class="sidebar__logo">SebBlog</h2>
        <span class="sidebar__catch_phrase">Welcome to my blog !</span>
        <i class="icon icon--close_sidebar ri-menu-5-line"></i>
    </section>
    <section aria-label="Search">
        <form action="/search" class="sidebar__form" method="get">
            <input class="input" placeholder="Search..." type="search">
            <button class="btn btn--form" type="submit">
                <i class="icon ri-search-line"></i>
            </button>
        </form>
    </section>
    <section>
        <h2 class="sidebar__category">Pages</h2>
        <nav>
            <ul class="list sidebar__list">
                <li class="item__list">
                    <a class="btn btn--link{% if route == '/' %} active{% endif %}" href="/">Home</a>
                </li>
                <li class="item__list">
                    <a class="btn btn--link{% if route == '/articles' %} active{% endif %}" href="/articles">Articles</a>
                </li>
                <li class="item__list">
                    <a class="btn btn--link{% if route == '/login' %} active{% endif %}" href="/login">Login</a>
                </li>
            </ul>
        </nav>
    </section>
    <section class="sidebar__articles">
        <h2 class="sidebar__category">Recent articles</h2>
        <ul class="list recent_articles__list">
            <li class="item__list">
                <a class="link" href="/">Nunc blandit dictum lectus sed auctor</a>
                <time class="recent_article__date" datetime="2023-03-03">March 3, 2023</time>
            </li>
        </ul>
    </section>
    <section>
        <h2 class="sidebar__category">FOLLOW ME</h2>
        <div class="sidebar__socials">
            <a class="link link--reset" href="https://www.frontendmentor.io/profile/sebastien-d-me">
                <i class="icon ri-external-link-line social__icon"></i>
            </a>
            <a class="link link--reset" href="https://github.com/sebastien-d-me">
                <i class="icon ri-github-fill social__icon"></i>
            </a>
            <a class="link link--reset" href="https://www.npmjs.com/~sebastiend1">
                <i class="icon ri-npmjs-line social__icon"></i>
            </a>
        </div>
    </section>
</aside>